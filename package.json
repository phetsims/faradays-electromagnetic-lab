{
  "name": "faradays-electromagnetic-lab",
  "version": "1.0.0-dev.8",
  "license": "GPL-3.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/phetsims/faradays-electromagnetic-lab.git"
  },
  "devDependencies": {
    "grunt": "~1.5.3"
  },
  "phet": {
    "requirejsNamespace": "FARADAYS_ELECTROMAGNETIC_LAB",
    "simulation": true,
    "runnable": true,
    "supportedBrands": [
      "phet",
      "phet-io",
      "adapted-from-phet"
    ],
    "phetLibs": [
      "bamboo"
    ],
    "supportsOutputJS": true,
    "simFeatures": {
      "supportsSound": true,
      "supportsDynamicLocale": true,
      "supportsInteractiveDescription": true,
      "colorProfiles": [
        "default",
        "projector"
      ]
    },
    "screenNameKeys": [
      "FARADAYS_ELECTROMAGNETIC_LAB/screen.barMagnet",
      "FARADAYS_ELECTROMAGNETIC_LAB/screen.pickupCoil",
      "FARADAYS_ELECTROMAGNETIC_LAB/screen.electromagnet",
      "FARADAYS_ELECTROMAGNETIC_LAB/screen.transformer",
      "FARADAYS_ELECTROMAGNETIC_LAB/screen.generator"
    ]
  },
  "eslintConfig": {
    "extends": "../chipper/eslint/sim_eslintrc.js",
    "rules": {
      "todo-should-have-issue": "off"
    },
    "overrides": [
      {
        "files": [
          "**/*.ts"
        ],
        "rules": {
          "@typescript-eslint/no-explicit-any": "error",
          "@typescript-eslint/ban-ts-comment": [
            "error",
            {
              "ts-expect-error": true,
              "ts-ignore": true,
              "ts-check": true,
              "ts-nocheck": true
            }
          ]
        }
      }
    ]
  }
}